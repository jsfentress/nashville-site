  <a href="/quote/" class="{% if page.url == '/quote/' %}active{% endif %}">Get a Quote</a>
  <a href="/gallery/" class="{% if page.url == '/gallery/' %}active{% endif %}">Photo Gallery</a>
  <a href="/more/" class="{% if page.url == '/more/' %}active{% endif %}">More</a>
