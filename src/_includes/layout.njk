  <a href="/commercial/" class="nav-btn {% if page.url == '/commercial/' %}active{% endif %}">Commercial</a>
  <a href="/residential/" class="nav-btn {% if page.url == '/residential/' %}active{% endif %}">Residential</a>
  <a href="/quote/" class="nav-btn {% if page.url == '/quote/' %}active{% endif %}">Get a Quote</a>
  <a href="/gallery/" class="nav-btn {% if page.url == '/gallery/' %}active{% endif %}">Photo Gallery</a>
  <a href="/more/" class="nav-btn {% if page.url == '/more/' %}active{% endif %}">More</a>
</div>

  </div>

  <!-- Mobile Nav -->
<div class="mobile-menu">
