    .top-bar {
      background-color: #3fc3f3;
      padding: 0.75em 1em;
    }

    .nav-wrapper {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 0.75em;
      justify-content: center;
    }

    .phone-section {
      display: flex;
